CustomBoxLayout:
   username:username
   password:password 
   token:token

   orientation:'vertical'

   Label:
      text:'Welcome to ResourceShare'

   BoxLayout:
      orientation:'horizontal'
      Label:
         text:'Username'
      TextInput:
         id: username
         height: 100 
         size_hint: 1, None
         text:''

   BoxLayout:
      orientation:'horizontal'
      Label:
         text:'Password'
      TextInput:
         id: password
         height: 100 
         size_hint: 1, None
         text:''

   Button:
      text:'Submit'
      on_release: root.on_submit()

   Label:
      id: token
      text:''